{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "lib": [
            "es2017",
            "es7",
            "es6",
            "dom",
            "es2020",
            "es2021"
        ],
        "declaration": true,
        "outDir": "tsdist",
        "strict": true,
        "rootDir": "src",
        "allowJs": true,
        "isolatedModules": true,
        "esModuleInterop": true
    },
    "exclude": [
        "node_modules",
        "tsdist",
        "dist",
        "test"
    ]
}